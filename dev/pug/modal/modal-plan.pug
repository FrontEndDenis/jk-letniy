#modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modal', aria-hidden='true')
	.modal-dialog.modal-dialog--wdh1400.modal-dialog-centered(role='document')
		.modal-content
			.modal-plan
				.modal-plan__section-title
					.section-title
						.section-title__text План квартиры
				.modal-plan__close(data-dismiss='modal', aria-label='close')
					+icon('close')
				.modal-plan__content
					.modal-plan__img
						img#img(src='static/images/content/plan-1.png', alt='Планировка')
					.modal-plan__right
						.modal-plan__title#title.s-title-36 Студия
						.modal-plan__specifications
							.modal-plan__main-specifications
								.modal-plan__area
									.modal-plan__number#area 35,3 м2
									.modal-plan__text общая площадь
								.modal-plan__living-area
									.modal-plan__number#living-area 21 м2
									.modal-plan__text жилая площадь
							ul.modal-plan__list
								li#room Площадь комнаты: 21,1 м2
								li#kitchen Площадь кухни: 5,5 м2
								li#wc Площадь санузла: 4,4 м2
								li#ceiling Высота потолков: 3 м
						.modal-plan__forms
							form.needs-validation(action='', novalidate)
								.form-group
									label
										input.form-control(type='tel', pattern="\+7\s\(\d{3}\)\s\d{3}-\d{2}-\d{2}", minlength='18', required, placeholder='+7 (___) ___-__-__')
										span Ваш телефон
								button.c-btn(type='submit') Узнать стоимость
								.policy Нажимая на кнопку, вы даете согласие на обработку персональных данных